<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="Button_Click" Grid.Row="0">LoginWindow</Button>
        <Button Grid.Row="2" Click="Button_Click_1">MenuWindow</Button>
        
        <Button Grid.Row="7" Click="Button_Click_2">ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ (ТЕСТ)</Button>
        <TextBox Grid.Row="5" x:Name="login"></TextBox>
        <TextBox Grid.Row="6" x:Name="password"></TextBox>
        <DataGrid Grid.Row="8" Loaded="DataGrid_Loaded" x:Name="Table"></DataGrid>
    </Grid>
</Window>
