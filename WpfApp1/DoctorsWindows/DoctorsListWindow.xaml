<Window x:Class="WpfApp1.DoctorsWindows.DoctorsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.DoctorsWindows"
        mc:Ignorable="d"
        Title="Врачи" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition />
            <ColumnDefinition Width="0.05*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgDoctors" Grid.Row="1" Grid.Column="1" />
        <Button Grid.Column="1" Grid.Row="8" Margin="600,5,0,5" FontSize="20" Click="Button_Click">Назад</Button>
        <Button Grid.Column="1" Grid.Row="8" Margin="0,5,600,5" FontSize="20" Click="Button_Click_1">Добавить</Button>
        <Button Grid.Column="1" Grid.Row="8" Margin="150,5,450,5" FontSize="20" Click="Button_Click_2">Удалить</Button>
    </Grid>
</Window>
